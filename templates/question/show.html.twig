{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ question.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
